{
    "manifest_version": 2,
    "name": "Chrome projets",
    "description": "This extension will open urls based on projet in local filesystem",
    "version": "1.0",
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },
    "background" : {
        "scripts" : ["background.js"],
        "persistent" : true
    },
    "permissions": [
        "activeTab",
        "background",
        "tabs",
        "webRequest",
        "http://localhost:6034/"
    ]
}
